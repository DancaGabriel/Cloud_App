// Jenkinsfile (Groovy Syntax)
pipeline {
    agent any // Rulează pe orice agent Jenkins disponibil (în cazul nostru, nodul master/incorporat)

    stages {
        stage('Checkout SCM') { // O etapă numită 'Checkout SCM'
            steps {
                // Pașii executați în această etapă
                echo 'Preluare cod din GitHub...'
                // Jenkins preia automat codul configurat în secțiunea SCM de mai sus
                // Instrucțiunea checkout scm este adesea implicită când se folosește 'Pipeline script from SCM',
                // dar o putem pune explicit pentru claritate.
                checkout scm
                echo 'Cod preluat cu succes.'
                // Listăm fișierele din directorul de lucru al jobului pentru verificare
                sh 'ls -la'
            }
        }
        // Aici vom adăuga mai târziu etape pentru:
        // - Instalare dependențe (pip install)
        // - Testare (dacă e cazul)
        // - Build (ex: creare imagine Docker)
        // - Deploy
    }

    post { // Acțiuni care rulează la finalul pipeline-ului
        always { // Rulează indiferent de succesul sau eșecul pipeline-ului
            echo 'Pipeline finalizat.'
        }
    }
}